@{
    ViewBag.Title = "产品图片列表";
}
@model OrderingSystem.Admin.Models.ProductImageVM
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="text-center">序号</th>
                                    <th class="text-center">菜品名称</th>
                                    <th class="text-center">图片</th>
                                    <th class="text-center">图片类型</th> 
                                    <th class="text-center">状态</th>
                                    <th class="text-center">创建时间</th> 
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Paging.Items != null && Model.Paging.Items.Count > 0)
                                {
                                    foreach (var item in Model.Paging.Items)
                                    {
                                        <tr>
                                            <td class="text-center">@item.ProductImageId</td>
                                            <td class="text-center">@item.Product.Name</td> 
                                            <td class="text-center">@item.BaseImageId</td>
                                            <td class="text-center">
                                                @if (item.Type == 1)
                                                {
                                                    @("展示图")
                                                }
                                               
                                            </td>  
                                            <td class="text-center">
                                                @if (item.Status == 0)
                                                {
                                                    <button type="button" class="btn btn-danger btn-xs">无效</button>
                                                }
                                                @if (item.Status == 1)
                                                {
                                                    <button type="button" class="btn btn-info btn-xs">有效</button>
                                                }
                                            </td>
                                            <td class="text-center">@item.CreateTime</td>
                                            <td> 
                                                <a href="/ProductImage/Edit?id=@item.ProductImageId&v=0" class="btn btn-info"><i class="fa fa-paste padding-right-4"></i>&nbsp;编辑</a>
                                                @if (item.Status == 0)
                                                {
                                                    <button onclick="enable('/ProductImage/UpdateStatus','/ProductImage/List','@item.ProductImageId','@((int)OrderingSystem.Domain.EnumHelp.EnabledEnum.有效)')" class="btn btn-primary"><i class="fa fa-check padding-right-4"></i>&nbsp;启用</button>
                                                }
                                                @if (item.Status == 1)
                                                {
                                                    <button onclick="disable('/ProductImage/UpdateStatus','/ProductImage/List','@item.ProductImageId','@((int)OrderingSystem.Domain.EnumHelp.EnabledEnum.无效)')" class="btn btn-warning"><i class="fa fa-warning padding-right-4"></i>&nbsp;禁用</button>
                                                }
                                                <button onclick="del('/ProductImage/Delete','/ProductImage/List','@item.ProductImageId')" class="btn btn-danger"><i class="fa fa-times padding-right-4"></i>&nbsp;删除</button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="btn-group">
                                <a href="/ProductImage/Edit?ProductId=@Model.Id" class="btn btn-info" data-refresh="0"><i class="fa fa-plus padding-right-4"></i>&nbsp;添加</a>
                                <a href="/ProductImage/List" class="btn btn-info" style="margin-left:10px;" data-refresh="0"><i class="fa fa-refresh padding-right-4"></i>&nbsp;刷新</a>
                            </div>
                            @Html.Raw(Model.Paging.Text)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
