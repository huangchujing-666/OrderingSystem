@using OrderingSystem.Domain
@{
    ViewBag.Title = "酒店分类列表";
}
@model OrderingSystem.Admin.Models.HotelCategoryVM
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <div class="row" style="padding:10px 10px;">
                        <form action="/HotelCategory/List" method="get">
                            <div class="col-sm-4">
                                搜索分类名称：
                                <input type="text" name="QueryName" class="form-control inline" style="width:70%;" placeholder="请输入查询分类名称" value="@(Model.QueryName ?? "")">
                            </div>
                            <button type="submit" class="btn btn-info">搜索</button>
                        </form>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="text-center">序号</th> 
                                    <th class="text-center">分类名称</th>
                                    <th class="text-center">创建时间</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Paging.Items != null && Model.Paging.Items.Count > 0)
                                {
                                    foreach (var item in Model.Paging.Items)
                                    {
                                        <tr>
                                            <td class="text-center">@item.HotelCategoryId</td>
                                             
                                            <td class="text-center">@item.Name</td>
                                            <td class="text-center">@item.CreateTime</td>
                                            <td>

                                                <a href="/HotelCategory/Edit?Id=@item.HotelCategoryId" class="btn btn-info"><i class="fa fa-paste padding-right-4"></i>&nbsp;编辑</a>
                                                <button onclick="del('/sHotelCategory/Delete','/HotelCategory/List','@item.HotelCategoryId')" class="btn btn-danger"><i class="fa fa-times padding-right-4"></i>&nbsp;删除</button>

                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="btn-group">
                                <a href="/HotelCategory/Edit" class="btn btn-info" data-refresh="0"><i class="fa fa-plus padding-right-4"></i>&nbsp;添加</a>
                                <a href="/HotelCategory/List" class="btn btn-info" style="margin-left:10px;" data-refresh="0"><i class="fa fa-refresh padding-right-4"></i>&nbsp;刷新</a>
                            </div>
                            @Html.Raw(Model.Paging.Text)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
