@{
    ViewBag.Title = "地区列表";
}
@model OrderingSystem.Admin.Models.BaseAreaVM
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <div class="row" style="padding:10px 10px;">
                        @*<form action="/BaseArea/List" method="get">
                            <div class="col-xs-3">
                                地区省：
                                <select class="form-control inline" style="width:70%;" name="QueryProvinceId">
                                    <option value="0">请选择地区省</option>
                                    @if (Model.Provinces != null && Model.Provinces.Count > 0)
                                    {
                                        foreach (var item in Model.Provinces)
                                        {
                                            <option @(Model.QueryProvinceId == item.Id ? "selected" : "") value="@item.Id">@item.Name</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-sm-3">
                                <button type="submit" class="btn btn-info">搜索</button>
                            </div>
                        </form>*@
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="text-center">序号</th>
                                    <th class="text-center">名称</th>
                                    <th class="text-center">等级</th>
                                    <th class="text-center">状态</th>
                                    <th class="text-center">创建时间</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Paging.Items != null && Model.Paging.Items.Count > 0)
                                {
                                    foreach (var item in Model.Paging.Items)
                                    {
                                        <tr>
                                            <td class="text-center">@item.BaseAreaId</td>
                                            <td class="text-center">@item.Name</td>
                                            <td class="text-center">@(item.Grade == 1 ? "省" : "")</td>
                                            <td class="text-center">
                                                @if (item.Status == 0)
                                                {
                                                    <span class="label label-danger">无效</span>
                                                }
                                                @if (item.Status == 1)
                                                {
                                                    <span class="label label-info">有效</span>
                                                }
                                            </td>
                                            <td class="text-center">@item.CreateTime</td>
                                            <td>
                                                <button onclick="iframe('城市展示','/BaseArea/CityList/@item.BaseAreaId')" class="btn btn-success">查看城市</button>
                                                <a href="/BaseArea/Edit/@item.BaseAreaId" class="btn btn-info"><i class="fa fa-paste padding-right-4"></i>&nbsp;编辑</a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="btn-group">
                                <a href="/BaseArea/Edit" class="btn btn-info" data-refresh="0"><i class="fa fa-plus padding-right-4"></i>&nbsp;添加</a>
                                <a href="/BaseArea/List" class="btn btn-info" style="margin-left:10px;" data-refresh="0"><i class="fa fa-refresh padding-right-4"></i>&nbsp;刷新</a>
                            </div>
                            @Html.Raw(Model.Paging.Text)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
