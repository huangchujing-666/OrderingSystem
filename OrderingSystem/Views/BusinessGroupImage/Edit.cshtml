@{
    ViewBag.Title = "商家展示图编辑";
}
@using OrderingSystem.Domain;
@model OrderingSystem.Admin.Models.BusinessGroupImageVM
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>
                        菜单编辑 <small>添加、修改</small>
                    </h5>
                </div>
                <div class="ibox-content">
                    <form class="form-horizontal">
                        <input type="hidden" name="id" id="id" value="@Model.BusinessGroupImage.BusinessGroupImageId">
                        <input type="hidden" name="businessGroupId" id="businessGroupId" value="@Model.BusinessGroupImage.BusinessGroupId">
                        <input type="hidden" id="imgInfoId" value="@Model.BusinessGroupImage.BaseImageId" />
                        <input type="hidden" id="oldImgInfoId" value="@Model.BusinessGroupImage.BaseImageId" />
                         
                        <div class="form-group">
                            <label class="col-sm-2 control-label">图片类型</label>
                            <div class="col-sm-4">
                                <select class="form-control inline" style="width:150px;" name="type" id="type">
                                    <option @(Model.BusinessGroupImage.Type == 1 ? "selected" : "") value="1">未选中图片</option>
                                    <option @(Model.BusinessGroupImage.Type == 2 ? "selected" : "") value="2">选中图片</option>
                                </select>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">添加图片</label>
                            <div class="col-sm-6">
                                <input id="filename" name="filename" type="file" class="file-loading" multiple data-show-upload="true" data-show-caption="true">
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                   
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button id="btnSave" class="btn btn-primary" type="button">保存</button>
                                <a class="btn btn-white" href="javascript:history.go(-1);">取消</a>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
@section script{
    <script src="@("/Scripts/plugins/fileinput/fileinput.js"+OrderingSystem.Admin.Versions.Ver)"></script>
    <script src="@("/Scripts/plugins/fileinput/zh.js"+OrderingSystem.Admin.Versions.Ver)"></script>
    <script src="@("/Scripts/ViewJs/BusinessGroupImage/BusinessGroupImageEdit.js"+OrderingSystem.Admin.Versions.Ver)"></script>
    <script type="text/javascript">


        //商家缩略图
        var img = [];
        if ('@Model.ImgInfo.Path' != '') {
            var str = '<img src="@(Model.ImgInfo.Source + Model.ImgInfo.Path)" class="kv-preview-thumb kv-file-content file-preview-image" />';
            img.push(str);
        }
        //缩略图上传js
        $('#filename').fileinput({
            language: 'zh',
            allowedFileTypes: ['image'],
            allowedFileExtensions: ['jpg', 'png', 'gif'],
            uploadUrl: '/Uploader/ImgFile?folder=BusinessGroupImage&title=商家分组图片',
            showUpload: false,  //是否显示上传按钮
            showRemove: true,   //显示移除按钮 
            showCaption: true,  //是否显示标题
            maxFileCount: 1,    //表示允许同时上传的最大文件个数
            maxFileSize: 0,   //单位为kb，如果为0表示不限制文件大小
            initialPreview: img,
            dropZoneTitle: '请选择需要上传的图片(注意文件不宜太大)',
        });
        //上传成功回调事件
        $("#filename").on("fileuploaded", function (event, data, previewId, index) {
            $('#imgInfoId').val(data.response);
        });
        //移除事件
        $("#filename").on("fileclear", function (event, data, previewId, index) {
            $.post("/Uploader/DeleteFile", { Id: $('#imgInfoId').val() }, function (data) { });
        });
    </script>
}

