@{
    ViewBag.Title = "菜品编辑";
}
@using OrderingSystem.Admin.Common;
@model OrderingSystem.Admin.Models.DishesVM
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="ibox-content">
        <div class="ibox-title">
            <h5>
                菜品编辑 <small> 添加、修改</small>
            </h5>
        </div>
    </div>
    <div class="col-sm-12">

        <div class="panel-body">
            <form class="form-horizontal">
                <div id="divImgIdHid"></div>
                <input type="hidden" class="form-control" name="id" id="id" value="@Model.Dishes.DishesId">
                <div class="form-group">
                    <label class="col-sm-2 control-label">商家</label>
                    <div class="col-sm-4">
                        @*@if (Model.Dishes.DishesId > 0)
                        {*@
                            <select class="form-control" name="businessmanId" id="businessmanId" @(int.Parse(Loginer.BusinessId)>0?"disabled":"")>
                                <option value="0">请选择餐厅</option>
                                @if (Model.BusinessList != null && Model.BusinessList.Count > 0)
                                {
                                    foreach (var item in Model.BusinessList)
                                    {
                                        <option @(Model.Dishes.BusinessInfoId == item.BusinessInfoId ? "selected" : "" ) value="@item.BusinessInfoId">@item.Name</option>
                                    }
                                }
                            </select>
                        @*}
                        else
                        {
                            <select id="businessmanIds" name="businessmanIds" class="selectpicker show-tick form-control" multiple data-live-search="false" data-dropup-auto="false">
                                @if (Model.BusinessList != null && Model.BusinessList.Count > 0)
                                {
                                    foreach (var item in Model.BusinessList)
                                    {
                                        <option value="@item.BusinessInfoId">@item.Name</option>
                                    }
                                }
                            </select>
                        }*@
                    </div><label class="red-line">*</label>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">菜名</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" placeholder="请输入菜名" maxlength="100" name="name" id="name" value="@(!string.IsNullOrWhiteSpace(Model.Dishes.Name)?Model.Dishes.Name:" ")">
                    </div><label class="red-line">*</label>
                </div>
                <div class="hr-line-dashed"></div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">原价</label>
                    <div class="col-sm-4">
                        <input type="number" class="form-control" placeholder="请输入菜品价格" name="orignPrice" id="orignPrice" value="@Model.Dishes.OrignPrice" onblur="priceOnblus()">
                    </div><label class="red-line">*</label>
                </div>
                <div class="hr-line-dashed"></div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">优惠价格</label>
                    <div class="col-sm-4">
                        <input type="number" class="form-control" placeholder="请输入菜品优惠价格" name="realPrice" id="realPrice" value="@(Model.Dishes.RealPrice)">
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">菜品分类</label>
                    <div class="col-sm-2">
                            <select class="form-control" name="dishecategoryId" id="dishecategoryId">
                                <option value="0">请选择菜品分类</option>
                                @if (Model.DishesCategoryList != null && Model.DishesCategoryList.Count > 0)
                                {
                                    foreach (var item in Model.DishesCategoryList)
                                    {
                                        <option @(Model.Dishes.DishesCategoryId == item.DishesCategoryId ? "selected" : "" ) value="@item.DishesCategoryId">@item.Name</option>
                                    }
                                }
                            </select>
                        </div><label class="red-line">*</label>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">月销售数量</label>
                    <div class="col-sm-4">
                        <input type="number" class="form-control" placeholder="请输入月销售数量" name="sellCountPerMonth" id="sellCountPerMonth" value="@(Model.Dishes.SellCountPerMonth)">
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">介绍</label>
                    <div class="col-sm-4">
                        <textarea id="description" class="form-control" style="height:150px;" name="description">@Model.Dishes.Descript</textarea>
                    </div>
                </div>
                @*<div class="form-group">
                        <label class="col-sm-2 control-label">介绍</label>
                        <div class="col-sm-8">
                            <textarea id="description" name="description">111</textarea>
                        </div>
                    </div>*@
                <div class="hr-line-dashed"></div>
                <input type="hidden" id="imgInfoId" value="@Model.Dishes.BaseImageId" />
                <input type="hidden" id="oldImgInfoId" value="@Model.Dishes.BaseImageId" />
                <div id="divShowImgHid"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">菜品封面图<br>（800px*800px）</label>
                    <div class="col-sm-6">
                        <input id="filename" name="filename" type="file" class="file-loading" multiple data-show-upload="true" data-show-caption="true">
                    </div>
                </div>

                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-2">
                        <button id="btnSave" class="btn btn-primary" type="button">保存内容</button>
                        <a class="btn btn-white" href="javascript:history.go(-1);">取消</a>
                    </div>
                </div>
                
            </form>
        </div>

    </div>
</div>
@section script{
    <script src="@("/Scripts/plugins/fileinput/fileinput.js"+OrderingSystem.Admin.Versions.Ver)"></script>
    <script src="@("/Scripts/plugins/fileinput/zh.js"+OrderingSystem.Admin.Versions.Ver)"></script>
    <script src="@("/Scripts/ViewJs/Dishes/dishesEdit.js"+OrderingSystem.Admin.Versions.Ver)"></script>
    <script type="text/javascript">
        $('#divImgIdHid').empty(); 
        $(function () {
            //初始多选下拉框
            @*var feature = '@Model.Dishes.AttributeId';
            var featureArr = feature.split(',');
            $('#feature').selectpicker('val', featureArr);

            var attids = "@Model.Dishes.AttributeId";
            var nutritionIds = "@Model.Dishes.NutritionId";
            $('#attributeId').selectpicker('val', attids.split(','));
            $('#nutritionId').selectpicker('val', nutritionIds.split(','));*@

            //初始化编辑器js
            @*var editor = new baidu.editor.ui.Editor({
                UEDITOR_HOME_URL: '/Scripts/ueditor/',//配置编辑器路径
                iframeCssUrl: '/Scripts/ueditor/themes/iframe.css',//样式路径
                initialContent: '@Html.Raw(Model.Dishes.Describes)',//初始化编辑器内容
                autoHeightEnabled: true,//高度自动增长
                minFrameHeight: 720//最小高度
            });
            editor.render('description');*@

            //菜品封面图
            var img = [];
            if ('@Model.ImgInfo.Path' != '') {
                var str = '<img src="@(Model.ImgInfo.Source + Model.ImgInfo.Path)" class="kv-preview-thumb kv-file-content file-preview-image" />';
                img.push(str);
            }
            $('#filename').fileinput({
                language: 'zh',
                allowedFileTypes: ['image'],
                allowedFileExtensions: ['jpg', 'png', 'gif'],
                uploadUrl: '/Uploader/ImgFile?folder=Dishes&title=菜品缩略图',
                showUpload: false,  //是否显示上传按钮
                showRemove: true,   //显示移除按钮
                maxFileSize: 2000,
                showCaption: true,  //是否显示标题
                maxFileCount: 1,    //表示允许同时上传的最大文件个数
                maxFileSize: 1024,   //单位为kb，如果为0表示不限制文件大小
                initialPreview: img,
                dropZoneTitle: '请选择需要上传的图片（800px*800px）',
            });
            //上传成功回调事件
            $("#filename").on("fileuploaded", function (event, data, previewId, index) {
                $('#imgInfoId').val(data.response);
            });
            //移除事件
            $("#filename").on("fileclear", function (event, data, previewId, index) {
                $.post("/Uploader/DeleteFile", { Id: $('#imgInfoId').val() }, function (data) { });
                $('#imgInfoId').val("0");
            });


        });


        function priceOnblus() { 
            $("#realPrice").val($("#orignPrice").val()); 
        }
    </script>
}

