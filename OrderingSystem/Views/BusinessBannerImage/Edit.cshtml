@{
    ViewBag.Title = "轮播图编辑";
}
@model OrderingSystem.Admin.Models.BusinessBannerImageVM
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>
                        分组编辑 <small>添加、修改</small>
                    </h5>
                </div>
                <div class="ibox-content">
                    <form id="from" class="form-horizontal">
                        <input type="hidden" class="form-control" name="id" id="id" value="@Model.BusinessBannerImage.BusinessBannerImageId">
                        <input type="hidden" id="imgInfoId" value="@Model.BusinessBannerImage.BaseImageId" />
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">系统模块</label>
                            <div class="col-sm-4">
                                <select class="form-control inline" style="width:70%;" name="module" id="module">
                                    <option value="0">请选择系统模块</option>
                                    <option @(Model.BusinessBannerImage.Module == 1 ? "selected" : "") value="1">食</option>
                                    <option @(Model.BusinessBannerImage.Module == 2 ? "selected" : "") value="2">衣</option>
                                    <option @(Model.BusinessBannerImage.Module == 3 ? "selected" : "") value="3">乐</option>
                                    <option @(Model.BusinessBannerImage.Module == 4 ? "selected" : "") value="4">酒店</option>
                                    <option @(Model.BusinessBannerImage.Module == 5 ? "selected" : "") value="5">景点</option>
                                    <option @(Model.BusinessBannerImage.Module == 6 ? "selected" : "") value="6">娱乐模块</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">商家名称</label>
                            <div class="col-sm-4">
                                <select class="form-control" name="BusinessInfoId" id="BusinessInfoId">
                                    <option value="0">请选择餐厅</option>
                                    @if (Model.BusinessList != null && Model.BusinessList.Count > 0)
                                    {
                                        foreach (var item in Model.BusinessList)
                                        {
                                            <option @(Model.BusinessBannerImage.BusinessInfoId == item.BusinessInfoId ? "selected" : "" ) value="@item.BusinessInfoId">@item.Name</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">图片</label>
                            <div class="col-sm-6">
                                <input id="filename" name="filename" type="file" class="file-loading" multiple data-show-upload="true" data-show-caption="true">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">备注</label>
                            <div class="col-sm-4">
                                <input type="text" name="Descript" id="Descript" class="form-control" placeholder="请输入备注" value="@(Model.BusinessBannerImage.Descript?? "")">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">排序</label>
                            <div class="col-sm-4">
                                <input type="number" maxlength="4" name="SortNo" id="SortNo" class="form-control" placeholder="请输入排序" value="@(Model.BusinessBannerImage.SortNo)">
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button id="btnSave" class="btn btn-primary" type="button">保存内容</button>
                                <a class="btn btn-white" href="javascript:history.go(-1);">取消</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section script{
    <script src="@("/Scripts/ViewJs/businessBannerImage/businessBannerImageEdit.js"+OrderingSystem.Admin.Versions.Ver)"></script>
    <script src="@("/Scripts/plugins/fileinput/fileinput.js"+OrderingSystem.Admin.Versions.Ver)"></script>
    <script src="@("/Scripts/plugins/fileinput/zh.js"+OrderingSystem.Admin.Versions.Ver)"></script>
    <script type="text/javascript">


        //商家缩略图
        var img = [];

        if ('@Model.ImgInfo.Path' != '') {
            var str = '<img src="@(Model.ImgInfo.Source + Model.ImgInfo.Path)" class="kv-preview-thumb kv-file-content file-preview-image" />';
            img.push(str);
        }
        $('#filename').fileinput({
            language: 'zh',
            allowedFileTypes: ['image'],
            allowedFileExtensions: ['jpg', 'png', 'gif'],
            uploadUrl: '/Uploader/ImgFile?folder=BusinessBannerImage&title=轮播图',
            showUpload: false,  //是否显示上传按钮
            showRemove: true,   //显示移除按钮
            maxFileSize: 2000,
            showCaption: true,  //是否显示标题
            maxFileCount: 1,    //表示允许同时上传的最大文件个数
            maxFileSize: 1024,   //单位为kb，如果为0表示不限制文件大小
            initialPreview: img,
            dropZoneTitle: '请选择需要上传的图片(200px*200px)',
        });
        //上传成功回调事件
        $("#filename").on("fileuploaded", function (event, data, previewId, index) {
            $('#imgInfoId').val(data.response);
        });
        //移除事件
        $("#filename").on("fileclear", function (event, data, previewId, index) {
            $.post("/Uploader/DeleteFile", { Id: $('#imgInfoId').val() }, function (data) { });
        });

        $(document).ready(function () {
            //值改变事件
            $('#module').change(function () {
                $.post('/BusinessBannerImage/GetBusinessList', { module: this.value }, function (data) {
                    $('#BusinessInfoId').empty();
                    var html = '<option value="0">请选择商家</option>';
                    for (var i = 0; i < data.length; i++) {
                        html += '<option value="' + data[i].BusinessInfoId + '">' + data[i].Name + '</option>';
                    }
                    $('#BusinessInfoId').append(html);
                });
            });
        })

    </script>
}
