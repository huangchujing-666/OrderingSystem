@{
    ViewBag.Title = "系统用户编辑";
}
@using OrderingSystem.Domain;
@model OrderingSystem.Admin.Models.SysAccountVM
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <div class="row" style="padding:10px 10px;">
                        <form action="/SysAccount/List" method="get">
                            <div class="col-sm-4">
                                帐号名称：
                                <input type="text" name="QueryName" class="form-control inline" style="width:70%;" placeholder="请输入查询角色名称" value="@(Model.QueryName ?? "")">
                            </div>
                            <button type="submit" class="btn btn-info">搜索</button>
                        </form>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="text-center">序号</th>
                                    <th class="text-center">帐号</th>
                                    <th class="text-center">用户名称</th>
                                    <th class="text-center">角色</th> 
                                    <th class="text-center">手机号</th>
                                    <th class="text-center">备注</th>
                                    <th class="text-center">状态</th>
                                    <th class="text-center">创建时间</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Paging.Items != null && Model.Paging.Items.Count > 0)
                                {
                                    foreach (var item in Model.Paging.Items)
                                    {
                                        <tr>
                                            <td class="text-center">@item.SysAccountId</td>
                                            <td class="text-center">@item.Account</td>
                                            <td class="text-center">@item.NickName</td>
                                            <td class="text-center">
                                                @*@if (item.SysRoleId == (int)EnumHelp.RoleTypeEnum.系统管理员)
                                                {
                                                    @("系统管理员")
                                                }
                                                else if (item.SysRoleId == (int)EnumHelp.RoleTypeEnum.商家)
                                                {
                                                    @("商家" + item.BusinessInfo != null ? "："+item.BusinessInfo.Name : "（N/A）")
                                                }*@
                                                @if (item.SysRole != null)
                                                {
                                                    @item.SysRole.Name;
                                                }
                                            </td> 
                                            <td class="text-center">@item.MobilePhone</td>
                                            <td class="text-center">@item.Remarks</td>
                                            <td class="text-center">
                                                @if (item.Status == 0)
                                                {
                                                    <button type="button" class="btn btn-danger btn-xs">无效</button>
                                                }
                                                @if (item.Status == 1)
                                                {
                                                    <button type="button" class="btn btn-info btn-xs">有效</button>
                                                }
                                            </td>
                                            <td class="text-center">@item.CreateTime</td>
                                            <td>
                                                <a href="/SysAccount/Edit/@item.SysAccountId" class="btn btn-info"><i class="fa fa-paste padding-right-4"></i>&nbsp;编辑</a>
                                                @if (item.Status == 0)
                                                {
                                                    <button onclick="enable('/SysAccount/UpdateStatus','/BusinessInfo/List','@item.SysAccountId','@((int)OrderingSystem.Domain.EnumHelp.EnabledEnum.有效)')" class="btn btn-primary"><i class="fa fa-check padding-right-4"></i>&nbsp;启用</button>
                                                }
                                                @if (item.Status == 1)
                                                {
                                                    <button onclick="disable('/SysAccount/UpdateStatus','/BusinessInfo/List','@item.SysAccountId','@((int)OrderingSystem.Domain.EnumHelp.EnabledEnum.无效)')" class="btn btn-warning"><i class="fa fa-warning padding-right-4"></i>&nbsp;禁用</button>
                                                }
                                                <button onclick="del('/SysAccount/Delete','/SysAccount/List','@item.SysAccountId')" class="btn btn-danger"><i class="fa fa-times padding-right-4"></i>&nbsp;删除</button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="btn-group">
                                <a href="/SysAccount/Edit" class="btn btn-info" data-refresh="0"><i class="fa fa-plus padding-right-4"></i>&nbsp;添加</a>
                                <a href="/SysAccount/List" class="btn btn-info" style="margin-left:10px;" data-refresh="0"><i class="fa fa-refresh padding-right-4"></i>&nbsp;刷新</a>
                            </div>
                            @Html.Raw(Model.Paging.Text)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
