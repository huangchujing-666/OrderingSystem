@{
    ViewBag.Title = "衣品预约详情";
}
@using OrderingSystem.Domain;
@model OrderingSystem.Admin.Models.AppointmentVM
@section head{
    <style type="text/css">
        .ibox-content img {
            max-height: 300px;
            max-width: 300px;
        }
    </style>
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>
                        预约详情
                    </h5>
                    <a class="btn btn-white pull-right" href="javascript:history.go(-1);">返回</a>
                </div>
                <div class="ibox-content">
                    <form id="from" class="form-horizontal">
                        <input type="hidden" class="form-control" name="id" id="id" value="@Model.Appointment.AppointmentId">

                        <div class="form-group">
                            <label class="col-sm-2 control-label">预约编号：</label>
                            <div class="col-sm-10">
                                <label class="control-label">@Model.Appointment.AppointmentId</label>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">用户名称：</label>
                            <div class="col-sm-10">
                                <label class="control-label">@Model.Appointment.UserName</label>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">联系方式：</label>
                            <div class="col-sm-10">
                                <label class="control-label">@Model.Appointment.Phone</label>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">商家名称：</label>
                            <div class="col-sm-10">
                                <label class="control-label">@(Model.Appointment.BusinessInfo == null ? "" : Model.Appointment.BusinessInfo.Name )</label>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">预约时间：</label>
                            <div class="col-sm-10">
                                <label class="control-label">@Model.Appointment.AppointmentTime</label>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">申请时间：</label>
                            <div class="col-sm-10">
                                <label class="control-label">@Model.Appointment.CreateTime</label>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">预约备注：</label>
                            <div class="col-sm-10">
                                <label class="control-label">@Model.Appointment.Remark</label>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">预约状态：</label>
                            <div class="col-sm-10">
                                <label class="control-label">@Model.Appointment.StatusName</label>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        @if (Model.Appointment.Status == (int)EnumHelp.RiceDateApplyStatus.被驳回)
                        {
                            <div class="form-group">
                                <label class="col-sm-2 control-label">驳回原因：</label>
                                <div class="col-sm-10">
                                    <label class="control-label">@Model.Appointment.DenyReason</label>
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                        }
                      
                        <div class="form-group">
                            <label class="col-sm-2 control-label">衣品信息：</label>
                            <div class="col-sm-10">
                                @foreach (var item in Model.GoodsList)
                                {
                                    <div style="float:left;margin:5px;">
                                        @if (item.BaseImage != null)
                                        {
                                            <img src="@(item.BaseImage.Source + item.BaseImage.Path)" /><br>
                                            <label class="control-label">@item.Name</label>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                @*<button id="btnSave" class="btn btn-primary" type="button">保存内容</button>*@
                                <a class="btn btn-white" href="javascript:history.go(-1);">返回</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section script{
    @*<script src="@("/Scripts/ViewJs/BaseArea/baseAreaEdit.js"+OrderingSystem.Admin.Versions.Ver)"></script>*@
}
