@{
    ViewBag.Title = "房间编辑";
}
@using OrderingSystem.Admin.Common;
@using System.Data.SqlTypes;
@model OrderingSystem.Admin.Models.RoomVM
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="ibox-content">
        <div class="ibox-title">
            <h5>
                房间编辑 <small> 添加、修改</small>
            </h5>
        </div>
    </div>
    <div class="col-sm-12">

        <div class="panel-body">
            <form class="form-horizontal">
                <div id="divImgIdHid"></div>
                <input type="hidden" class="form-control" name="id" id="id" value="@Model.Room.RoomId">
                <div class="form-group">
                    <label class="col-sm-2 control-label">酒店</label>
                    <div class="col-sm-4">
                        @*@if (Model.Room.RoomId > 0)
                        {*@
                            <select class="form-control" name="businessmanId" id="businessmanId" @(int.Parse(Loginer.BusinessId)>0?"disabled":"")>
                                <option value="0">请选择酒店</option>
                                @if (Model.BusinessList != null && Model.BusinessList.Count > 0)
                                {
                                    foreach (var item in Model.BusinessList)
                                    {
                                        <option @(Model.Room.BusinessInfoId == item.BusinessInfoId ? "selected" : "" ) value="@item.BusinessInfoId">@item.Name</option>
                                    }
                                }
                            </select>
                        @*}
                        else
                        {
                            <select id="businessmanIds" name="businessmanIds" class="selectpicker show-tick form-control" multiple data-live-search="false" data-dropup-auto="false">
                                @if (Model.BusinessList != null && Model.BusinessList.Count > 0)
                                {
                                    foreach (var item in Model.BusinessList)
                                    {
                                        <option value="@item.BusinessInfoId">@item.Name</option>
                                    }
                                }
                            </select>
                        }*@
                    </div><label class="red-line">*</label>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">房间名称</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" placeholder="请输入房间名称" maxlength="100" name="name" id="name" value="@(!string.IsNullOrWhiteSpace(Model.Room.Name)?Model.Room.Name:" ")">
                    </div><label class="red-line">*</label>
                </div>
                <div class="hr-line-dashed"></div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">原价</label>
                    <div class="col-sm-4">
                        <input type="number" class="form-control" placeholder="请输入房间价格" name="orignPrice" id="orignPrice" value="@Model.Room.OrignPrice" onblur="priceOnblus()">
                    </div><label class="red-line">*</label>
                </div>
                <div class="hr-line-dashed"></div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">优惠价格</label>
                    <div class="col-sm-4">
                        <input type="number" class="form-control" placeholder="请输入房间优惠价格" name="realPrice" id="realPrice" value="@(Model.Room.RealPrice)">
                    </div>
                </div>
                <div class="hr-line-dashed"></div> 
                
                <div class="form-group">
                    <label class="col-sm-2 control-label">窗户</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" placeholder="窗户描述" name="Window" id="Window" value="@(Model.Room.Window)"> 
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">早餐</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" placeholder="早餐描述" name="Breakfast" id="Breakfast" value="@(Model.Room.Breakfast)">  
                    </div>
                </div> 
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">面积</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" placeholder="房间面积描述" name="Area" id="Area" value="@(Model.Room.Area)">  
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">上网</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" placeholder="上网描述" name="Internet" id="Internet" value="@(Model.Room.Internet)">   
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">床尺寸</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" placeholder="尺寸描述" name="Bed" id="Bed" value="@(Model.Room.Bed)">    
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">床型</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" placeholder="床型描述（大床，单床，双床）" name="BedType" id="BedType" value="@(Model.Room.BedType)">
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">洗手间</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" placeholder="洗手间描述" name="Bathroom" id="Bathroom" value="@(Model.Room.Bathroom)">     
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">空调</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" placeholder="空调描述" name="AirConditioner" id="AirConditioner" value="@(Model.Room.AirConditioner)">   
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">购买须知</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" placeholder="请输入购买须知" name="Notice" id="Notice" value="@(Model.Room.Notice)">    
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">使用规则</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" placeholder="请输入使用规则" name="Rules" id="Rules" value="@(Model.Room.Rules)">     
                    </div>
                </div>
                <div class="hr-line-dashed"></div>  

                <div class="form-group">
                    <label class="col-sm-2 control-label">剩余数量</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" placeholder="请输入剩余数量" name="Remain" id="Remain" value="@(Model.Room.Remain)">  
                    </div>
                </div> 
                  
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-2">
                        <button id="btnSave" class="btn btn-primary" type="button">保存内容</button>
                        <a class="btn btn-white" href="javascript:history.go(-1);">取消</a>
                    </div>
                </div>
                
            </form>
        </div>

    </div>
</div>
@section script{
    <script src="@("/Scripts/plugins/fileinput/fileinput.js"+OrderingSystem.Admin.Versions.Ver)"></script>
    <script src="@("/Scripts/plugins/fileinput/zh.js"+OrderingSystem.Admin.Versions.Ver)"></script>
    <script src="@("/Scripts/ViewJs/Room/RoomEdit.js"+OrderingSystem.Admin.Versions.Ver)"></script>
    <script type="text/javascript">
        

        function priceOnblus() { 
            $("#realPrice").val($("#orignPrice").val()); 
        }
    </script>
}

