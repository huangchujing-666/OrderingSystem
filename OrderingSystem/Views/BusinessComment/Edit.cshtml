@{
    ViewBag.Title = "商家评论编辑";
}
@model OrderingSystem.Admin.Models.BusinessCommentVM
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>
                        菜单编辑 <small>添加、修改</small>
                    </h5>
                </div>
                <div class="ibox-content">
                    <form class="form-horizontal">
                        <input type="hidden" name="BusinessCommentId" id="BusinessCommentId" value="@Model.BusinessCommentId">
                        <input type="hidden" id="UserId" name="UserId" value="@Model.UserId" />
                        <input type="hidden" id="BusinessInfoId" name="BusinessInfoId" value="@Model.BusinessInfoId" />
                        <div class="form-group">
                            <label class="col-sm-2 control-label">商家名称</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" placeholder="商家名称" readonly="readonly" maxlength="100" name="BusinessName" id="BusinessName" value="@(Model.BusinessName??"")">
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">用户名称</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" placeholder="用户名称" readonly="readonly" maxlength="100" name="NickName" id="NickName" value="@(Model.NickName??"")">
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">评论信息</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" placeholder="请输入评论信息" maxlength="500" name="Contents" id="Contents" value="@(Model.Contents??"")">
                            </div><label class="red-line">*</label>
                        </div>
                        <div class="hr-line-dashed"></div>
                          <div class="form-group">
                            <label class="col-sm-2 control-label">评论等级</label>
                            <div class="col-sm-6" id="appendDiv">
                                <select class="form-control inline" style="width:150px;" name="LevelId" id="LevelId">
                                    <option value="0">请选择评论等级</option>
                                    @if (Model.Levels != null && Model.Levels.Count > 0)
                                    {
                                        foreach (var a in Model.Levels)
                                        {
                                            <option @(Model.LevelId == a.LevelId.ToString() ? "selected" : "" ) value="@a.LevelId">@a.Name</option>
                                        }
                                    }
                                </select><label class="red-line">*</label>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">是否匿名</label>
                            <div class="col-sm-6" id="appendDiv">
                                <input type="radio" id="radNonSupport" name="IsAnonymous" @(Model.IsAnonymous==1?"checked":"")  value="1" />
                                <label for="radNonSupport" style="cursor:pointer;">匿名</label>
                                <label style="margin-left:10px;"></label>
                                <input type="radio" id="radSupport" name="IsAnonymous" @(Model.IsAnonymous==0?"checked":"") value="0" />
                                <label for="radSupport" style="cursor:pointer;">未匿名</label>
                               <label class="red-line">*</label>
                            </div>
                        </div><div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">推荐菜品</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" placeholder="请输入推荐菜品" maxlength="500" name="RecommendDishes" id="RecommendDishes" value="@(Model.BusinessComment.RecommendDishes??"")">
                            </div><label class="red-line">*</label>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button id="btnSave" class="btn btn-primary" type="button">保存</button>
                                <a class="btn btn-white" href="javascript:history.go(-1);">取消</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section script{
    <script src="@("/Scripts/ViewJs/BusinessComment/BusinessCommentEdit.js"+OrderingSystem.Admin.Versions.Ver)"></script>
}
