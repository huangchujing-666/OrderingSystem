@{
    ViewBag.Title = "商家评论列表";
}
@model OrderingSystem.Admin.Models.BusinessCommentVM
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <div class="row" style="padding:10px 10px;">
                        <form action="/BusinessComment/List" method="get">
                            <div class="col-sm-4">
                                评论内容：
                                <input type="text" name="QueryName" class="form-control inline" style="width:70%;" placeholder="请输入评论内容" value="@(Model.QueryName ?? "")">
                            </div>
                            <button type="submit" class="btn btn-info">搜索</button>
                        </form>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="text-center">序号</th>
                                    <th class="text-center">商家名称</th>
                                    <th class="text-center">用户名称</th>
                                    <th class="text-center">评论内容</th>
                                    <th class="text-center">评论等级</th>
                                    <th class="text-center" style="width:300px;">推荐菜品</th>
                                    <th class="text-center">是否匿名</th>
                                    <th class="text-center">状态</th>
                                    <th class="text-center">创建时间</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Paging.Items != null && Model.Paging.Items.Count > 0)
                                {
                                    foreach (var item in Model.Paging.Items)
                                    {
                                        <tr>
                                            <td class="text-center">@item.BusinessCommentId</td>
                                            <td class="text-center">
                                                @if (item.BusinessInfo != null)
                                                {
                                                    @item.BusinessInfo.Name
                                                }
                                                else { }
                                            </td>
                                            <td class="text-center">
                                                @if (item.User != null)
                                                {
                                                    @item.User.NickName
                                                }
                                                else { }
                                            </td>
                                            <td class="text-center">@item.Contents</td>
                                            <td class="text-center">
                                                @if (item.Level != null)
                                                {
                                                    @item.Level.Name
                                                }
                                                else { }
                                            </td>
                                            <td class="text-center">@item.RecommendDishes</td>
                                            <td class="text-center">
                                                @if (item.IsAnonymous == 1)
                                                {
                                                    @OrderingSystem.Domain.EnumHelp.IsAnonymous.匿名
                                                }
                                                else { @OrderingSystem.Domain.EnumHelp.IsAnonymous.未匿名
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (item.Status == 0)
                                                {
                                                    <button type="button" class="btn btn-danger btn-xs">无效</button>
                                                }
                                                @if (item.Status == 1)
                                                {
                                                    <button type="button" class="btn btn-info btn-xs">有效</button>
                                                }
                                            </td>
                                            <td class="text-center">@item.CreateTime</td>
                                            <td>
                                                @*<button onclick="iframe('子菜单展示','/BusinessInfo/ChildList/@item.BusinessInfoId')" class="btn btn-success">子菜单</button>*@
                                                <a href="/BusinessComment/Edit?BusinessCommentId=@item.BusinessCommentId" class="btn btn-info"><i class="fa fa-paste padding-right-4"></i>&nbsp;编辑</a>
                                                @if (item.Status == 0)
                                                {
                                                    <button onclick="enable('/BusinessComment/UpdateStatus?BusinessCommentId=@item.BusinessCommentId&Status=@((int)OrderingSystem.Domain.EnumHelp.EnabledEnum.有效)','/BusinessComment/List','@item.BusinessCommentId','@((int)OrderingSystem.Domain.EnumHelp.EnabledEnum.有效)')" class="btn btn-primary"><i class="fa fa-check padding-right-4"></i>&nbsp;启用</button>
                                                }
                                                @if (item.Status == 1)
                                                {
                                                    <button onclick="disable('/BusinessComment/UpdateStatus?BusinessCommentId=@item.BusinessCommentId&Status=@((int)OrderingSystem.Domain.EnumHelp.EnabledEnum.无效)','/BusinessComment/List','@item.BusinessCommentId','@((int)OrderingSystem.Domain.EnumHelp.EnabledEnum.无效)')" class="btn btn-warning"><i class="fa fa-warning padding-right-4"></i>&nbsp;禁用</button>
                                                }
                                                <button onclick="del('/BusinessComment/Delete?BusinessCommentId=@item.BusinessCommentId','/BusinessComment/List','@item.BusinessCommentId')" class="btn btn-danger"><i class="fa fa-times padding-right-4"></i>&nbsp;删除</button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="btn-group">
                                @*<a href="/BusinessComment/Edit" class="btn btn-info" data-refresh="0"><i class="fa fa-plus padding-right-4"></i>&nbsp;添加</a>*@
                                <a href="/BusinessComment/List" class="btn btn-info" style="margin-left:10px;" data-refresh="0"><i class="fa fa-refresh padding-right-4"></i>&nbsp;刷新</a>
                            </div>
                            @Html.Raw(Model.Paging.Text)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
