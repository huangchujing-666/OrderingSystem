@using OrderingSystem.Domain
@{
    ViewBag.Title = "商家测评列表";
}
@model OrderingSystem.Admin.Models.BusinessEvaluationVM
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <div class="row" style="padding:10px 10px;">
                        <form action="/BusinessEvaluation/List" method="get">
                            <div class="col-sm-4">
                                搜索分类名称：
                                <input type="text" name="QueryName" class="form-control inline" style="width:70%;" placeholder="请输入查询分类名称" value="@(Model.QueryName ?? "")">
                            </div>
                            <button type="submit" class="btn btn-info">搜索</button>
                        </form>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="text-center">序号</th>
                                    <th class="text-center">商家名称</th>
                                    <th class="text-center">商家测评</th>
                                    <th class="text-center">环境评分</th>
                                    <th class="text-center">服务评分</th>
                                    <th class="text-center">设施评分</th>
                                    <th class="text-center">评分时间</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Paging.Items != null && Model.Paging.Items.Count > 0)
                                {
                                    foreach (var item in Model.Paging.Items)
                                    {
                                        <tr>
                                            <td class="text-center">@item.BusinessInfoId</td>
                                            <td class="text-center">@item.Name</td>
                                            <td class="text-center">@item.Grade</td>
                                            <td class="text-center">
                                                @if (item.BusinessEvaluation==null)
                                                {
                                                    item.BusinessEvaluation = new OrderingSystem.Domain.Model.BusinessEvaluation
                                                    {
                                                        Environment =item.Grade,
                                                        Facilities = item.Grade,
                                                        Service = item.Grade,
                                                        CreateTime = DateTime.Now
                                                    };
                                                }
                                                @item.BusinessEvaluation.Environment
                                            </td>
                                            <td class="text-center">@item.BusinessEvaluation.Facilities</td>
                                            <td class="text-center">@item.BusinessEvaluation.Service</td>
                                            <td class="text-center">@item.BusinessEvaluation.CreateTime</td>
                                            <td>

                                                <a href="/BusinessEvaluation/Edit?Id=@item.BusinessInfoId" class="btn btn-info"><i class="fa fa-paste padding-right-4"></i>&nbsp;编辑</a>

                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="btn-group">
                                @*<a href="/BusinessEvaluation/Edit?BusinessInfoId=@Model.BusinessInfoId" class="btn btn-info" data-refresh="0"><i class="fa fa-plus padding-right-4"></i>&nbsp;添加</a>*@
                                <a href="/BusinessEvaluation/List" class="btn btn-info" style="margin-left:10px;" data-refresh="0"><i class="fa fa-refresh padding-right-4"></i>&nbsp;刷新</a>
                            </div>
                            @Html.Raw(Model.Paging.Text)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
