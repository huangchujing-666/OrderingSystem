@using OrderingSystem.Domain
@{
    ViewBag.Title = "标签列表";
}
@model OrderingSystem.Admin.Models.DishesLabelVM
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="text-center">序号</th>
                                    <th class="text-center">标签名称</th> 
                                    @*<th class="text-center">创建时间</th>*@
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.DishesLabelList != null && Model.DishesLabelList.Count > 0)
                                {
                                    foreach (var item in Model.DishesLabelList)
                                    {
                                        <tr>
                                            <td class="text-center">@item.DishesLableId</td>
                                            <td class="text-center">@item.Name</td> 
                                            @*<td class="text-center">@item.DishesLable.CreateTime</td>*@
                                            <td>
                                                <a href="/DishesLabel/Edit?Id=@item.DishesLableId&DishesId=@item.DishesId" class="btn btn-info"><i class="fa fa-paste padding-right-4"></i>&nbsp;编辑</a>
                                                <button onclick="del('/DishesLabel/Delete','/DishesLabel/List/@item.DishesId','@item.DishesLableId')" class="btn btn-danger"><i class="fa fa-times padding-right-4"></i>&nbsp;删除</button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="btn-group">
                                <a href="/DishesLabel/Edit?DishesId=@Model.Id" class="btn btn-info" data-refresh="0"><i class="fa fa-plus padding-right-4"></i>&nbsp;添加</a>
                                <a href="/DishesLabel/List/@Model.Id" class="btn btn-info" style="margin-left:10px;" data-refresh="0"><i class="fa fa-refresh padding-right-4"></i>&nbsp;刷新</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
