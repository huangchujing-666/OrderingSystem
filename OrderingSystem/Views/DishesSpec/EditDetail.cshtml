@{
    ViewBag.Title = "规格编辑";
}
@model OrderingSystem.Admin.Models.DishesSpecVM
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="ibox-content">
        <div class="ibox-title">
            <h5>
                规格编辑 <small> 添加、修改</small>
            </h5>
        </div>
    </div>
    <div class="col-sm-12">

        <div class="panel-body">
            <form class="form-horizontal">
                <div id="divImgIdHid"></div>
                <input type="hidden" class="form-control" name="id" id="id" value="@Model.DishesSpecDetail.DishesSpecDetailId">
                <input type="hidden" class="form-control" name="specid" id="specid" value="@Model.DishesSpecId"> 

                <div class="form-group">
                    <label class="col-sm-2 control-label">规格描述</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" placeholder="请输入规格描述，例如：常温" maxlength="100" name="name" id="name" value="@Model.DishesSpecDetail.Descript">
                    </div><label class="red-line">*</label>
                </div>

                <div class="hr-line-dashed"></div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">加价</label>
                    <div class="col-sm-4">
                        <input type="number" class="form-control" placeholder="请输入加价" name="orignPrice" id="orignPrice" value="@Model.DishesSpecDetail.OrignPrice" onblur="priceOnblus()">
                    </div><label class="red-line">*</label>
                </div>
                <div class="hr-line-dashed"></div>

                <div class="form-group" style="display:none;">
                    <label class="col-sm-2 control-label">优惠价格</label>
                    <div class="col-sm-4">
                        <input type="number" class="form-control" placeholder="请输入优惠价格" name="realPrice" id="realPrice" value="@(Model.DishesSpecDetail.RealPrice)">
                    </div>
                </div>
                <div class="hr-line-dashed"></div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-2"> 
                        <button id="btnSave" class="btn btn-primary" type="button">保存内容</button>
                        <a class="btn btn-white" href="javascript:history.go(-1);">取消</a>
                    </div>
                </div>

            </form>
        </div>

    </div>
</div>
@section script{
    <script type="text/javascript">
        $(function () {
           
            $("#btnSave").click(function () {

                var id = $('#id'),
                   specid = $('#specid'),
                   name = $('#name'),
                orignPrice = $('#orignPrice'),
                realPrice = $('#realPrice');
                //数据校验
                if ($.trim(name.val()) == '' || name.val() == null) {
                    name.focus();
                    return false;
                }

                if (orignPrice.val() == '' || orignPrice.val() == null) {
                    orignPrice.focus();
                    return false;
                }

                if (realPrice.val() == '' || realPrice.val() == null) {
                    realPrice.focus();
                    return false;
                }

                var dataArr = {
                    DishesSpecDetailId: id.val(),
                    DishesSpecId: specid.val(),
                    Descript: name.val(),
                    OrignPrice: orignPrice.val(),
                    RealPrice: realPrice.val()
                };
                window.parent.showModal();
                //提交
                $.post('/DishesSpec/EditDetail', dataArr, function (data) {
                    if (data.Status == 200) {
                        swal("提示", "操作成功");
                        setTimeout(function () {
                            window.location.href = '/DishesSpec/DetailList?Id=' + specid.val();
                        }, 1500);
                    }
                    if (data.Status == 202) {
                        swal("提示", "操作失败");
                    }
                    if (data.Status == 203) {
                        swal("提示", "数据重复");
                    }
                }).complete(function () { window.parent.hideModal(); });
            })
        });

        function priceOnblus() { 
            $("#realPrice").val($("#orignPrice").val()); 
        }
    </script>
}

