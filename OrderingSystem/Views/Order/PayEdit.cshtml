@{
    ViewBag.Title = "标签编辑";
}
@model OrderingSystem.Admin.Models.OrderVM
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="ibox-content">
        <div class="ibox-title">
            <h5>
               支付编辑 <small> 添加、修改</small>
            </h5>
        </div>
    </div>
    <div class="col-sm-12">

        <div class="panel-body">
            <form class="form-horizontal">
                <div id="divImgIdHid"></div>
                <input type="hidden" class="form-control" name="id" id="id" value="@Model.Id">  
                
                <div class="form-group">
                    <label class="col-sm-2 control-label">选择支付方式</label>
                    <div class="col-sm-4">
                        <select class="form-control inline" style="width:70%;" id="selPay" name="selPay">
                            <option value="0">请选择状态</option>
                            @if (Model.BusinessPayConfigList != null && Model.BusinessPayConfigList.Count > 0)
                            {
                                foreach (var item in Model.BusinessPayConfigList)
                                {
                                    <option  value="@item.BusinessPayConfigId">@item.Name</option>
                                }
                            } 
                        </select>
                    </div><label class="red-line">*</label>
                </div>
                <div class="hr-line-dashed"></div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">输入支付金额</label>
                    <div class="col-sm-4">
                        <input type="number" class="form-control" placeholder="请输入金额" min="0" name="amount" id="amount" value="">
                    </div><label class="red-line">*</label>
                </div>
                 

                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-2">
                        <button id="btnSave" class="btn btn-primary" type="button">保存内容</button>
                        <a class="btn btn-white" href="javascript:history.go(-1);">取消</a>
                    </div>
                </div>

            </form>
        </div>

    </div>
</div>
@section script{
    <script type="text/javascript">
        $(function () {
            
            $("#btnSave").click(function () {

                var id = $('#id'),
                   payConfig = $("#selPay"),
                payAmount = $("#amount");
                //数据校验
                if (payConfig.val() == 0) {
                    swal("提示", "请配置并选择支付方式");
                    payConfig.focus();
                    return false;
                }

                if (payAmount.val() == 0 || $.trim(payAmount.val()) == '') {
                    swal("提示", "请输入金额");
                    payAmount.focus();
                    return false;
                }
                var dataArr = {
                    id: id.val(),
                    payConfigId: payConfig.val(),
                    amount: payAmount.val()
                };
                window.parent.showModal();
                //提交
                $.post('/Order/WritePayInfo', dataArr, function (data) {
                    if (data.Status == 200) {
                        swal("提示", "操作成功");
                        setTimeout(function () {
                            window.location.href = '/Order/List/';
                        }, 1500);
                    }
                    if (data.Status == 202) {
                        swal("提示", "操作失败");
                    }
                    if (data.Status == 203) {
                        swal("提示", "数据重复");
                    }
                }).complete(function () { window.parent.hideModal(); });
            })
        });
    </script>
}

