@{
    ViewBag.Title = "站点列表";
}
@using OrderingSystem.Domain;
@model OrderingSystem.Admin.Models.BaseStationVM
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <div class="row" style="padding:10px 10px;">
                        <form action="/BaseStation/List" method="get">
                            <div class="col-sm-3">
                                站点名称：
                                <input type="text" name="QueryStationName" class="form-control inline" style="width:70%;" placeholder="请输入查询站点名称" value="@(Model.QueryStationName??"")">
                            </div>
                            <div class="col-sm-3">
                                线路名称：
                                <input type="text" name="QueryLineName" class="form-control inline" style="width:70%;" placeholder="请输入查询线路名称" value="@(Model.QueryLineName??"")">
                            </div>
                            <div class="col-sm-3">
                                城市名称：
                                <input type="text" name="QueryCityName" class="form-control inline" style="width:70%;" placeholder="请输入查询城市名称" value="@(Model.QueryCityName??"")">
                            </div>
                            <div class="col-sm-3">
                                <button type="submit" class="btn btn-info">搜索</button>
                            </div>
                        </form>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="text-center">序号</th>
                                    <th class="text-center">站点名称</th>
                                    <th class="text-center">所属线路</th>
                                    <th class="text-center">所属城市</th> 
                                    <th class="text-center">状态</th>
                                    <th class="text-center">创建时间</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Paging.Items != null && Model.Paging.Items.Count > 0)
                                {
                                    foreach (var item in Model.Paging.Items)
                                    {
                                        <tr>
                                            <td class="text-center">@item.BaseStationId</td>
                                            <td class="text-center">@item.Name</td>
                                            <td class="text-center">@item.BaseLine.LineName</td>
                                            <td class="text-center">@item.BaseArea.Name</td> 
                                            <td class="text-center">
                                                @if (item.Status == 0)
                                                {
                                                    <span class="label label-danger">无效</span>
                                                }
                                                @if (item.Status == 1)
                                                {
                                                    <span class="label label-info">有效</span>
                                                }
                                            </td>
                                            <td class="text-center">@item.CreateTime</td>
                                            <td>
                                                <a href="/BaseStation/Edit/@item.BaseStationId" class="btn btn-info"><i class="fa fa-paste padding-right-4"></i>&nbsp;编辑</a>
                                                @if (item.Status == 0)
                                                {
                                                    <button onclick="enable('/BaseStation/UpdateStatus','/BaseStation/List','@item.BaseStationId','@((int)EnumHelp.EnabledEnum.有效)')" class="btn btn-primary"><i class="fa fa-check padding-right-4"></i>&nbsp;启用</button>
                                                }
                                                @if (item.Status == 1)
                                                {
                                                    <button onclick="disable('/BaseStation/UpdateStatus','/BaseStation/List','@item.BaseStationId','@((int)EnumHelp.EnabledEnum.无效)')" class="btn btn-warning"><i class="fa fa-warning padding-right-4"></i>&nbsp;禁用</button>
                                                }
                                                <button onclick="del('/BaseStation/Delete','/BaseStation/List','@item.BaseStationId')" class="btn btn-danger"><i class="fa fa-times padding-right-4"></i>&nbsp;删除</button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="btn-group">
                                @*<a href="/BaseStation/Edit" class="btn btn-info" data-refresh="0"><i class="fa fa-plus padding-right-4"></i>&nbsp;添加</a>*@
                                <a href="/BaseStation/List" class="btn btn-info" style="margin-left:10px;" data-refresh="0"><i class="fa fa-refresh padding-right-4"></i>&nbsp;刷新</a>
                            </div>
                            @Html.Raw(Model.Paging.Text)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

