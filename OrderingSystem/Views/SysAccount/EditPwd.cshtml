@{
    ViewBag.Title = "修改密码";
}
@using OrderingSystem.Admin;
@using OrderingSystem.Admin.Common;
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>
                        修改密码
                    </h5>
                </div>
                <div id="div" class="ibox-content">
                    <form id="from" class="form-horizontal">
                        <input type="hidden" name="accountId" id="accountId" value="@Loginer.AccountId">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">账号</label>
                            <div class="col-sm-4">
                                <input type="text" readonly class="form-control" placeholder="账号" name="account" id="account" value="@(!string.IsNullOrWhiteSpace(Loginer.Account) ? Loginer.Account : "")">
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">原始密码</label>
                            <div class="col-sm-4">
                                <input type="password" class="form-control" placeholder="原始密码" name="oldPassword" id="oldPassword" value="">
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">新密码</label>
                            <div class="col-sm-4">
                                <input type="password" class="form-control" placeholder="新密码" name="newPassword" id="newPassword" value="">
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">确认密码</label>
                            <div class="col-sm-4">
                                <input type="password" class="form-control" placeholder="确认密码" name="confirmPassword" id="confirmPassword" value="">
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button id="btnSave" class="btn btn-primary" type="button">确认修改</button>
                                <a class="btn btn-white" href="javascript:top.location.href = '/Home/Index';">取消</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section script{
    <script src="@("/Scripts/ViewJs/SysAccount/editPwd.js"+Versions.Ver)"></script>
}