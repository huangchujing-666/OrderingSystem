@{
    ViewBag.Title = "站点编辑";
}
@model OrderingSystem.Admin.Models.BaseStationVM
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>
                        站点编辑 <small>添加、修改</small>
                    </h5>
                </div>
                <div class="ibox-content">
                    <form id="from" class="form-horizontal">
                        <input type="hidden" class="form-control" name="id" id="id" value="@Model.Station.BaseStationId">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">所属线路</label>
                            <div class="col-sm-8" id="appendDiv">
                                <select class="form-control inline" style="width:150px;" name="provinceId" id="provinceId">
                                    <option value="0">请选择地区省</option>
                                    @if (Model.Provinces != null && Model.Provinces.Count > 0)
                                    {
                                        foreach (var a in Model.Provinces)
                                        {
                                            <option @(Model.City.FId == a.BaseAreaId ? "selected" : "") value="@a.BaseAreaId">@a.Name</option>
                                        }
                                    }
                                </select>
                                <select class="form-control inline" title="" style="width:150px;" name="cityId" id="cityId">
                                    <option value="0">请选择地区市</option>
                                    @if (Model.Citys != null && Model.Citys.Count > 0)
                                    {
                                        foreach (var b in Model.Citys)
                                        {
                                            <option @(Model.Station.BaseAreaId == b.BaseAreaId ? "selected" : "") value="@b.BaseAreaId">@b.Name</option>
                                        }
                                    }
                                </select>
                                <select class="form-control inline" title="" style="width:150px;" name="lineId" id="lineId">
                                    <option value="0">请选择线路</option>
                                    @if (Model.Lines != null && Model.Lines.Count > 0)
                                    {
                                        foreach (var c in Model.Lines)
                                        {
                                            <option @(Model.Station.BaseLineId == c.BaseLineId ? "selected" : "") value="@c.BaseLineId">@c.LineName</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">站点名称</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" placeholder="请输入站点名称" name="name" id="name" value="@(Model.Station.Name ?? "")">
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        @*<div class="form-group">
                            <label class="col-sm-2 control-label">排序号</label>
                            <div class="col-sm-2">
                                <input type="number" class="form-control" placeholder="排序号" name="sortNo" id="sortNo" value="@Model.Station.SortNo">
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>*@
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button id="btnSave" class="btn btn-primary" type="button">保存内容</button>
                                <a class="btn btn-white" href="javascript:history.go(-1);">取消</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section script{
    <script src="@("/Scripts/ViewJs/BaseStation/baseStationEdit.js"+OrderingSystem.Admin.Versions.Ver)"></script>
}