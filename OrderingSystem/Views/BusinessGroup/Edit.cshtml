@{
    ViewBag.Title = "分组编辑";
}
@model OrderingSystem.Admin.Models.BusinessGroupVM
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="ibox-content">
        <div class="ibox-title">
            <h5>
                分组编辑 <small> 添加、修改</small>
            </h5>
        </div>
    </div>
    <div class="col-sm-12">

        <div class="panel-body">
            <form class="form-horizontal">
                <div id="divImgIdHid"></div>
                <input type="hidden" class="form-control" name="id" id="id" value="@Model.BusinessGroup.BusinessGroupId">
                <input type="hidden" id="imgInfoId" value="@Model.BusinessGroup.BaseImageId" />
                <input type="hidden" id="oldImgInfoId" value="@Model.BusinessGroup.BaseImageId" />
                 
                <div class="form-group" style="display:none;">
                    <label class="col-sm-2 control-label">图片</label>
                    <div class="col-sm-6">
                        <input id="filename" name="filename" type="file" class="file-loading" multiple data-show-upload="true" data-show-caption="true">
                    </div>
                </div>
                <div class="hr-line-dashed" style="display:none;"></div> 

                <div class="form-group">
                    <label class="col-sm-2 control-label">选择模块类型</label>
                    <div class="col-sm-4">
                        <select class="form-control inline" style="width:150px;" name="businessTypeId" id="businessTypeId">
                            <option value="0">请选择模块类型</option>
                            <option @(Model.BusinessGroup.BusinessTypeId == 1 ? "selected" : "") value="1">食模块</option>
                            <option @(Model.BusinessGroup.BusinessTypeId == 2 ? "selected" : "") value="2">衣模块</option>
                            <option @(Model.BusinessGroup.BusinessTypeId == 3 ? "selected" : "") value="3">乐模块</option>
                            <option @(Model.BusinessGroup.BusinessTypeId == 4 ? "selected" : "") value="4">酒店</option>
                            <option @(Model.BusinessGroup.BusinessTypeId == 5 ? "selected" : "") value="5">景点</option>
                        </select>
                    </div><label class="red-line">*</label>
                </div>
            

                <div class="hr-line-dashed"></div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">输入分组名称</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" placeholder="输入分组名称" maxlength="100" name="name" id="name" value="@Model.BusinessGroup.Name">
                    </div><label class="red-line">*</label>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">排序号</label>
                    <div class="col-sm-2">
                        <input type="number" class="form-control" placeholder="排序号" name="sortNo" id="sortNo" value="@Model.BusinessGroup.Sort">
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-2">
                        <button id="btnSave" class="btn btn-primary" type="button">保存内容</button>
                        <a class="btn btn-white" href="javascript:history.go(-1);">取消</a>
                    </div>
                </div>

            </form>
        </div>

    </div>
</div> 
@section script{
    <script src="@("/Scripts/plugins/fileinput/fileinput.js"+OrderingSystem.Admin.Versions.Ver)"></script>
    <script src="@("/Scripts/plugins/fileinput/zh.js"+OrderingSystem.Admin.Versions.Ver)"></script>
    <script src="@("/Scripts/ViewJs/BusinessGroup/businessGroupEdit.js"+OrderingSystem.Admin.Versions.Ver)"></script>
    <script type="text/javascript">
        var img = [];
        if ('@Model.BusinessGroup.BaseImage.Path' != '') {
            var str = '<img src="@(Model.BusinessGroup.BaseImage.Source+Model.BusinessGroup.BaseImage.Path)" class="kv-preview-thumb kv-file-content file-preview-image" />';
            img.push(str);
        }
         
        //缩略图上传js
        $('#filename').fileinput({
            language: 'zh',
            allowedFileTypes: ['image'],
            allowedFileExtensions: ['jpg', 'png', 'gif'],
            uploadUrl: '/Uploader/ImgFile?folder=BusinessGroup&title=商家分组图片',
            showUpload: false,  //是否显示上传按钮
            showRemove: true,   //显示移除按钮
            maxFileSize: 2000,
            showCaption: true,  //是否显示标题
            maxFileCount: 1,    //表示允许同时上传的最大文件个数
            maxFileSize: 500,   //单位为kb，如果为0表示不限制文件大小
            initialPreview: img,
            dropZoneTitle: '请选择需要上传的图片',
        });
        //上传成功回调事件
        $("#filename").on("fileuploaded", function (event, data, previewId, index) {
            $('#imgInfoId').val(data.response);
        });
        //移除事件
        $("#filename").on("fileclear", function (event, data, previewId, index) {
            $.post("/Uploader/DeleteFile", { Id: $('#imgInfoId').val() }, function (data) { });
        });
         
         
    </script> 
}

