@{
    ViewBag.Title = "商家折扣列表";
}
@model OrderingSystem.Admin.Models.ActivityDiscountVM
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <div class="row" style="padding:10px 10px;">
                        <form action="/ActivityDiscount/List" method="get">
                            <div class="col-sm-3">
                                商家名称：
                                <input type="text" name="QueryName" class="form-control inline" style="width:70%;" placeholder="请输入查询商家名称" value="@(Model.QueryName??"")">
                            </div>
                            <div class="col-sm-2">
                                模块：
                                <select class="form-control inline" style="width:70%;" name="QueryType">
                                    <option value="0">请选择分类</option>
                                    <option @(Model.QueryType == 1 ? "selected" : "") value="1">食</option>
                                    <option @(Model.QueryType == 2 ? "selected" : "") value="2">衣</option>
                                    <option @(Model.QueryType == 3 ? "selected" : "") value="3">乐</option>
                                </select>
                            </div>
                            <div class="col-sm-3">
                                <button type="submit" class="btn btn-info">搜索</button>
                            </div>
                        </form>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="text-center" style="width:300px;">商家名称</th>
                                    <th class="text-center">折扣</th>
                                    <th class="text-center">满减设置</th>
                                    <th class="text-center">创建时间</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Paging.Items != null && Model.Paging.Items.Count > 0)
                                {
                                    foreach (var item in Model.Paging.Items)
                                    {
                                        <tr>
                                            <td class="text-center">@item.Name</td>
                                            <td class="text-center">
                                                @if (item.ActivityDiscount != null)
                                                {
                                                    @(item.ActivityDiscount.Discount)
                                                }
                                                else
                                                {
                                                    @*@(("未设置")*@
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (item.ActivityMinusList != null)
                                                {
                                                    @(item.ActivityMinusList.Count + "条满减优惠")
                                                }
                                                else
                                                {

                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (item.ActivityDiscount != null)
                                                {
                                                    @(item.ActivityDiscount.CreateTime)
                                                }
                                                else
                                                {

                                                }
                                            </td>
                                            <td>
                                                <button onclick="iframe('满减设置','/ActivityMinus/List?BusinessInfoId=@item.BusinessInfoId')" class="btn btn-success">满减设置</button>
                                                @if (item.ActivityDiscount == null)
                                                {
                                                    <a href="/ActivityDiscount/Edit?BusinessInfoId=@item.BusinessInfoId" class="btn btn-info"><i class="fa fa-paste padding-right-4"></i>&nbsp;设置商家折扣</a>
                                                }
                                                else
                                                {
                                                    if (item.ActivityDiscount.Status == 0)
                                                    {
                                                        <button onclick="enable('/ActivityDiscount/UpdateStatus?ActivityDiscountId=@item.ActivityDiscount.ActivityDiscountId&Status=@((int)OrderingSystem.Domain.EnumHelp.EnabledEnum.有效)','/ActivityDiscount/List','@item.ActivityDiscount.ActivityDiscountId','@((int)OrderingSystem.Domain.EnumHelp.EnabledEnum.有效)')" class="btn btn-primary"><i class="fa fa-check padding-right-4"></i>&nbsp;启用</button>
                                                    }
                                                    else
                                                    {
                                                        <a href="/ActivityDiscount/Edit?BusinessInfoId=@item.BusinessInfoId" class="btn btn-info"><i class="fa fa-paste padding-right-4"></i>&nbsp;编辑折扣</a>
                                                        <button onclick="disable('/ActivityDiscount/UpdateStatus?ActivityDiscountId=@item.ActivityDiscount.ActivityDiscountId&Status=@((int)OrderingSystem.Domain.EnumHelp.EnabledEnum.无效)','/ActivityDiscount/List','@item.ActivityDiscount.ActivityDiscountId','@((int)OrderingSystem.Domain.EnumHelp.EnabledEnum.无效)')" class="btn btn-warning"><i class="fa fa-warning padding-right-4"></i>&nbsp;禁用</button>
                                                    }
                                                    @*if (item.ActivityDiscount.IsDelete == 0)
                                                    {
                                                        <button onclick="del('/ActivityDiscount/Delete','/ActivityDiscount/List','@item.ActivityDiscount.ActivityDiscountId')" class="btn btn-danger"><i class="fa fa-times padding-right-4"></i>&nbsp;删除</button>
                                                    }*@
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="btn-group">
                                <a href="/ActivityDiscount/List" class="btn btn-info" style="margin-left:10px;" data-refresh="0"><i class="fa fa-refresh padding-right-4"></i>&nbsp;刷新</a>
                            </div>
                            @Html.Raw(Model.Paging.Text)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
