@{
    ViewBag.Title = "商家列表";
}
@model OrderingSystem.Admin.Models.BusinessInfoVM
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <div class="row" style="padding:10px 10px;">
                        <form action="/BusinessInfo/List" method="get">
                            <div class="col-sm-4">
                                商家名称：
                                <input type="text" name="QueryName" class="form-control inline" style="width:70%;" placeholder="请输入查询商家名称" value="@(Model.QueryName ?? "")">
                            </div>
                            <div class="col-sm-2">
                                模块：
                                <select class="form-control inline" style="width:70%;" name="QueryType">
                                    <option value="0">请选择分类</option>
                                    <option @(Model.QueryType == 1 ? "selected" : "") value="1">食</option>
                                    <option @(Model.QueryType == 2 ? "selected" : "") value="2">衣</option>
                                    <option @(Model.QueryType == 3 ? "selected" : "") value="3">乐</option>
                                    <option @(Model.QueryType == 4 ? "selected" : "") value="4">酒店</option>
                                    <option @(Model.QueryType == 5 ? "selected" : "") value="5">景点</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-info">搜索</button>
                        </form>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="text-center">序号</th>
                                    <th class="text-center">商家名称</th>
                                    <th class="text-center">商家公告</th>
                                    <th class="text-center">营业时间</th>
                                    <th class="text-center">联系方式</th>
                                    <th class="text-center">状态</th>
                                    <th class="text-center">创建时间</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Paging.Items != null && Model.Paging.Items.Count > 0)
                                {
                                    foreach (var item in Model.Paging.Items)
                                    {
                                        <tr>
                                            <td class="text-center">@item.BusinessInfoId</td>
                                            <td class="text-center">@item.Name</td>
                                            <td class="text-center">@item.Notic</td>
                                            <td class="text-center">@item.BusinessHour</td>
                                            <td class="text-center">@item.Mobile</td>
                                            <td class="text-center">
                                                @if (item.Status == 0)
                                                {
                                                    <button type="button" class="btn btn-danger btn-xs">无效</button>
                                                }
                                                @if (item.Status == 1)
                                                {
                                                    <button type="button" class="btn btn-info btn-xs">有效</button>
                                                }
                                            </td>
                                            <td class="text-center">@item.CreateTime</td>
                                            <td>
                                                @if (!Model.SysAccountList.Where(p => p.Account == ("yssgadmin" + item.BusinessInfoId)).Any())
                                                {
                                                    <button onclick="createBusinessAcount('/BusinessInfo/CreateBusinessAccount','/BusinessInfo/List','@item.BusinessInfoId')" class="btn btn-primary"><i class="fa fa-check padding-right-4"></i>&nbsp;创建帐号</button>
                                                } 

                                                <button onclick="iframe('商家展示图','/BusinessImage/List?BusinessId=@item.BusinessInfoId')" class="btn btn-success">商家展示图</button>

                                                @if (item.BusinessTypeId == 4)
                                                {
                                                    <button onclick="iframe('类别','/BusinessInfo/CategoryEdit/@item.BusinessInfoId')" class="btn btn-success">类别</button>
                                                    <button onclick="iframe('标签','/BusinessLable/List/@item.BusinessInfoId')" class="btn btn-success">标签</button>
                                                }
                                              
                                                <a href="/BusinessInfo/Edit?id=@item.BusinessInfoId&v=0" class="btn btn-info"><i class="fa fa-paste padding-right-4"></i>&nbsp;编辑</a>
                                                @if (item.Status == 0)
                                                {
                                                    <button onclick="enable('/BusinessInfo/UpdateStatus','/BusinessInfo/List','@item.BusinessInfoId','@((int)OrderingSystem.Domain.EnumHelp.EnabledEnum.有效)')" class="btn btn-primary"><i class="fa fa-check padding-right-4"></i>&nbsp;启用</button>
                                                }
                                                @if (item.Status == 1)
                                                {
                                                    <button onclick="disable('/BusinessInfo/UpdateStatus','/BusinessInfo/List','@item.BusinessInfoId','@((int)OrderingSystem.Domain.EnumHelp.EnabledEnum.无效)')" class="btn btn-warning"><i class="fa fa-warning padding-right-4"></i>&nbsp;禁用</button>
                                                }
                                                <button onclick="del('/BusinessInfo/Delete','/BusinessInfo/List','@item.BusinessInfoId')" class="btn btn-danger"><i class="fa fa-times padding-right-4"></i>&nbsp;删除</button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="btn-group">
                                <a href="/BusinessInfo/Edit" class="btn btn-info" data-refresh="0"><i class="fa fa-plus padding-right-4"></i>&nbsp;添加</a>
                                <a href="/BusinessInfo/List" class="btn btn-info" style="margin-left:10px;" data-refresh="0"><i class="fa fa-refresh padding-right-4"></i>&nbsp;刷新</a>
                            </div>
                            @Html.Raw(Model.Paging.Text)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section script{
    <script type="text/javascript">
        //创建商家后台对象登录帐号
        var createBusinessAcount = function (url, skipUrl, id) {
            swal({
                title: "您确定要创建当前商家帐号吗",
                text: "确认将创建当前商家对应的商家后台管理帐号，请谨慎操作！",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "是的，我要创建！",
                cancelButtonText: "让我再考虑一下…",
                closeOnConfirm: false,
                closeOnCancel: false
            }, function (isConfirm) {
                if (isConfirm) {
                    window.parent.showModal();
                    $.post(url, { Id: id }, function (data) {
                        if (data.Status == 200) {
                            swal("创建成功！", "您已经创建了当前商家对于后台帐号信息。", "success");
                            setTimeout(function () {
                                //window.location.href = skipUrl;
                                window.location.href = location.href;
                            }, 1500);
                        } else {
                            swal("提示", "创建失败");
                        }
                    }).complete(function () { window.parent.hideModal(); });
                } else {
                    swal("已取消", "您取消了创建操作！", "error");
                }
            });
        };

    </script>
}