@{
    ViewBag.Title = "文章列表";
}
@using OrderingSystem.Domain;
@model OrderingSystem.Admin.Models.JourneyArticleVM

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <div class="row" style="padding:10px 10px;">
                        <form action="/JourneyArticle/List" method="get">
                            <div class="col-sm-3">
                                文章名称：
                                <input type="text" name="QueryName" class="form-control inline" style="width:70%;" placeholder="请输入查询文章名称" value="@(Model.QueryName??"")">
                            </div>
                            <div class="col-sm-3">
                                商家名称：
                                <input type="text" name="QueryBusinessName" class="form-control inline" style="width:70%;" placeholder="请输入查询商家名称" value="@(Model.QueryBusinessName??"")">
                            </div>
                            <div class="col-sm-3">
                                <button type="submit" class="btn btn-info">搜索</button>
                            </div>
                        </form>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="text-center">序号</th>
                                    <th class="text-center">文章标题</th>
                                    <th class="text-center">关联商家</th>
                                    <th class="text-center">阅读数</th>
                                    <th class="text-center">点赞数</th>
                                    <th class="text-center">状态</th>
                                    <th class="text-center">创建时间</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Paging.Items != null && Model.Paging.Items.Count > 0)
                                {
                                    foreach (var item in Model.Paging.Items)
                                    {
                                        <tr>
                                            <td class="text-center">@item.JourneyArticleId</td>
                                            <td class="text-center">@item.Name</td>
                                            <td class="text-center">
                                                @if (item.BusinessInfo != null)
                                                {
                                                    @item.BusinessInfo.Name
                                                }
                                            </td>
                                            <td class="text-center">@item.Reads</td>
                                            <td class="text-center">@item.Likes</td>
                                            <td class="text-center">
                                                @if (item.Status == 0)
                                                {
                                                    <span class="label label-danger">无效</span>
                                                }
                                                @if (item.Status == 1)
                                                {
                                                    <span class="label label-info">有效</span>
                                                }
                                            </td>
                                            <td class="text-center">@item.CreateTime</td>
                                            <td>
                                                <a href="/JourneyArticle/Edit/@item.JourneyArticleId" class="btn btn-info"><i class="fa fa-paste padding-right-4"></i>&nbsp;编辑</a>
                                                @if (item.Status == 0)
                                                {
                                                    <button onclick="enable('/JourneyArticle/UpdateStatus','/JourneyArticle/List','@item.JourneyArticleId','@((int)EnumHelp.EnabledEnum.有效)')" class="btn btn-primary"><i class="fa fa-check padding-right-4"></i>&nbsp;启用</button>
                                                }
                                                @if (item.Status == 1)
                                                {
                                                    <button onclick="disable('/JourneyArticle/UpdateStatus','/JourneyArticle/List','@item.JourneyArticleId','@((int)EnumHelp.EnabledEnum.无效)')" class="btn btn-warning"><i class="fa fa-warning padding-right-4"></i>&nbsp;禁用</button>
                                                }
                                                <button onclick="del('/JourneyArticle/Delete','/JourneyArticle/List','@item.JourneyArticleId')" class="btn btn-danger"><i class="fa fa-times padding-right-4"></i>&nbsp;删除</button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="btn-group">
                                <a href="/JourneyArticle/Edit" class="btn btn-info" data-refresh="0"><i class="fa fa-plus padding-right-4"></i>&nbsp;添加</a>
                                <a href="/JourneyArticle/List" class="btn btn-info" style="margin-left:10px;" data-refresh="0"><i class="fa fa-refresh padding-right-4"></i>&nbsp;刷新</a>
                            </div>
                            @Html.Raw(Model.Paging.Text)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
