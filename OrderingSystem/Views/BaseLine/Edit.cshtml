@{
    ViewBag.Title = "线路编辑";
}
@model OrderingSystem.Admin.Models.BaseLineVM
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>
                        线路编辑 <small>添加、修改</small>
                    </h5>
                </div>
                <div class="ibox-content">
                    <form id="from" class="form-horizontal">
                        <input type="hidden" class="form-control" name="id" id="id" value="@Model.Line.BaseLineId">
                        <input type="hidden" id="imgInfoId" value="@Model.Line.BaseImageId" />
                        <input type="hidden" id="oldImgInfoId" value="@Model.Line.BaseImageId" />
                        <div class="form-group">
                            <label class="col-sm-2 control-label">图片</label>
                            <div class="col-sm-6">
                                <input id="filename" name="filename" type="file" class="file-loading" multiple data-show-upload="true" data-show-caption="true">
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">地区选择</label>
                            <div class="col-sm-4" id="appendDiv">
                                <select class="form-control inline" style="width:150px;" name="provinceId" id="provinceId">
                                    <option value="0">请选择地区省</option>
                                    @if (Model.Provinces != null && Model.Provinces.Count > 0)
                                    {
                                        foreach (var a in Model.Provinces)
                                        {
                                            <option @(Model.City.FId == a.BaseAreaId ? "selected" : "") value="@a.BaseAreaId">@a.Name</option>
                                        }
                                    }
                                </select>
                                <select class="form-control inline" style="width:150px;" name="cityId" id="cityId">
                                    <option value="0">请选择地区市</option>
                                    @if (Model.Citys != null && Model.Citys.Count > 0)
                                    {
                                        foreach (var b in Model.Citys)
                                        {
                                            <option @(Model.Line.BaseAreaId == b.BaseAreaId ? "selected" : "") value="@b.BaseAreaId">@b.Name</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">线路名称</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" placeholder="请输入线路名称" name="lineName" id="lineName" value="@(Model.Line.LineName??"")">
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">线路编号</label>
                            <div class="col-sm-2">
                                <input type="number" class="form-control" placeholder="请输入线路编号" name="lineNumber" id="lineNumber" value="@Model.Line.LineNumber">
                            </div>
                        </div>
                        @*<div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">排序号</label>
                            <div class="col-sm-2">
                                <input type="number" class="form-control" placeholder="排序号" name="sortNo" id="sortNo" value="@Model.Line.SortNo">
                            </div>
                        </div>*@
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button id="btnSave" class="btn btn-primary" type="button">保存内容</button>
                                <a class="btn btn-white" href="javascript:history.go(-1);">取消</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section script{
    <script src="@("/Scripts/plugins/fileinput/fileinput.js"+OrderingSystem.Admin.Versions.Ver)"></script>
    <script src="@("/Scripts/plugins/fileinput/zh.js"+OrderingSystem.Admin.Versions.Ver)"></script>
    <script src="@("/Scripts/ViewJs/BaseLine/baseLineEdit.js"+OrderingSystem.Admin.Versions.Ver)"></script>
    <script type="text/javascript">
        var img = [];
        if ('@Model.ImgInfo.Path' != '') {
            var str = '<img src="@(Model.ImgInfo.Source+Model.ImgInfo.Path)" class="kv-preview-thumb kv-file-content file-preview-image" />';
            img.push(str);
        }
        //缩略图上传js
        $('#filename').fileinput({
            language: 'zh',
            allowedFileTypes: ['image'],
            allowedFileExtensions: ['jpg', 'png', 'gif'],
            uploadUrl: '/Uploader/ImgFile?folder=BaseLine&title=线路图片',
            showUpload: false,  //是否显示上传按钮
            showRemove: true,   //显示移除按钮
            maxFileSize: 2000,
            showCaption: true,  //是否显示标题
            maxFileCount: 1,    //表示允许同时上传的最大文件个数
            maxFileSize: 500,   //单位为kb，如果为0表示不限制文件大小
            initialPreview: img,
            dropZoneTitle: '请选择需要上传的图片',
        });
        //上传成功回调事件
        $("#filename").on("fileuploaded", function (event, data, previewId, index) {
            $('#imgInfoId').val(data.response);
        });
        //移除事件
        $("#filename").on("fileclear", function (event, data, previewId, index) {
            $.post("/Uploader/DeleteFile", { Id: $('#imgInfoId').val() }, function (data) { });
        });
    </script>
}

